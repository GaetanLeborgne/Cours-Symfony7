{% extends "base.html.twig" %}

{% block title "Toutes Les recettes" %}

{% block body %}
    <p>
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Qui, maiores? Minima ad consequuntur voluptatum perspiciatis neque, adipisci repudiandae earum laboriosam mollitia, voluptatibus autem assumenda nemo laborum voluptas. At, ut iste?
    </p>
    <p>
        <a class= "btn btn-primary btn-sm" href="{{ path('recipe.create') }}">crééer une nouvelle recette</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
        <tr>
            <td>
                <a href="{{ path('recipe.show', {id: recipe.id , slug: recipe.slug}) }}"> {{recipe.title}}</a>
            </td>
            <td>
                <div class="d-flex gap-1">
                    <a class="btn btn-primary btn-sm" href="{{ path('recipe.edit', {id: recipe.id}) }}">Éditer</a>
                    <form action="{{ path('recipe.delete', {id: recipe.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </div>
            </td>
        </tr>
             {% endfor %}
        </tbody>     
    </table>
{% endblock %}
    