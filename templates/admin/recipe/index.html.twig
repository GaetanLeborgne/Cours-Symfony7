{% extends "admin/admin.html.twig" %}

{% block title "Toutes Les recettes" %}

{% block body %}
    <p>
        <a class= "btn btn-primary btn-sm" href="{{ path('admin.recipe.create') }}">créer une nouvelle recette</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Categorie</th>
            <th style="width: 200px">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
        <tr>
            <td>
                <a href="{{ path('admin.recipe.edit', {id: recipe.id}) }}"> {{recipe.title}}</a>
            </td>
            <td> {{ recipe.category.name | default('') }} </td>
            <td>
                <div class="d-flex gap-1">
                    <a class="btn btn-primary btn-sm" href="{{ path('admin.recipe.edit', {id: recipe.id}) }}">Éditer</a>
                    <form action="{{ path('admin.recipe.delete', {id: recipe.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </div>
            </td>
        </tr>
             {% endfor %}
        </tbody>     
    </table>
{% endblock %}
    